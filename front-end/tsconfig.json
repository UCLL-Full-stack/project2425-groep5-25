{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@services/*": ["services/*"],
            "@types": ["types/index.ts"],
            "@styles/*": ["styles/*"]
        },
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true,
        "target": "ES2017"
    },
    "include": [
        "src",
        "tests",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "utils/dateÂµts",
        "babel.config.js"
    ],
    "exclude": ["node_modules"]
}
